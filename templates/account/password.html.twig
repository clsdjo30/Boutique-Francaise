{% extends 'base.html.twig' %}

{% block title %}Channger mon mot de passe{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <h1>Modification du mot de passe </h1>
        <a href="{{ path('app_account') }}">Retouner sur mon compte</a><br>
        Vous souhaitez modifier le mot de passe pour {{ app.user.email}}<br>

        <hr>
            {% if notification %}
                <div class="alert alert-warning">{{ notification }}</div>
        {% endif %}
{{ form(form) }}

    </div>
{% endblock %}
